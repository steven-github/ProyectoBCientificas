@using System.Web.UI.WebControls
@model IEnumerable<ProyectoBitacorasCientificas.Models.RolesLaboratorio>

@{
    ViewBag.Title = "RolesLaboratorios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles Laboratorios</h2>

<form class="form-horizontal">
    <div class="form-group">
        <div class="col-xs-8">

            @if (Model != null)
            {
                if (!Model.Any())
                {
                    <p>No tenemos Roles</p>
                }
                else
                {

                    <!--Table-->
                    <table id="tablePreview" class="table">
                        <!--Table head-->
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Laboratorio</th>
                                <th>Tipo Rol</th>
                                <th>Puesto</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var roles in Model)
                            {
                                <tr>
                                    <td>@roles.id</td>
                                    <td>@roles.Labs.nombre</td>
                                    <td>@roles.tipoRol</td>
                                    <td>@roles.puesto</td>
                                    <td>@Html.ActionLink("Editar", "RolesLaboratorioEditar", "Seguridad", new { id = roles.id }, null)</td>
                                    <td>@Html.ActionLink("Eliminar", "RolesLaboratorioEliminar", "Seguridad", new { id = roles.id }, null)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

            }

        </div>
    </div>
</form>