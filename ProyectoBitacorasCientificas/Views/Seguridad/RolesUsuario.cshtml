@using System.Web.Mvc.Html
@model ProyectoBitacorasCientificas.ViewModels.UserRoleViewModel
@{
    /**/

    ViewBag.Title = "RolesUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RolesUsuario</h2>
@using (Html.BeginForm("RolesUsuario", "Seguridad"))
{
    <form>
    <div class="form-group">
        @Html.LabelFor(m => m.ApplicationUsers)
        @Html.DropDownListFor(m => m.RolesUsuario.ApplicationUserId,
            new SelectList(
                Model.ApplicationUsers,
                "Id",
                "Email"),
            "Seleccione el usuario",
            new {@class = "form-control"})
    </div>

        <div class="form-group">
            @Html.LabelFor(m => m.IdentityRoles)
            @Html.DropDownListFor(m => m.RolesUsuario.IdentityRoleId,
                new SelectList(
                    Model.IdentityRoles,
                    "Id",
                    "Name"
                    ),
                "Seleccione el role",
                new {@class = "form-control"})
        </div>
        @Html.HiddenFor(m => m.RolesUsuario.id)
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}


