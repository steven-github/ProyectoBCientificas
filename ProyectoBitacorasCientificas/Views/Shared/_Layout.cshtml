                            <li><a href="#">@Html.ActionLink(ProyectoBitacorasCientificas.Resources.Lang.RolesLaboratorio, "RolesLaboratorio", "Seguridad")</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">@Html.ActionLink(ProyectoBitacorasCientificas.Resources.Lang.PuestosRoles, "PuestosRoles", "Seguridad")</a></li>
                            <li><a href="#">@Html.ActionLink(ProyectoBitacorasCientificas.Resources.Lang.Consecutivos, "Consecutivos", "Seguridad")</a></li>
                        </ul>
                    </li>
