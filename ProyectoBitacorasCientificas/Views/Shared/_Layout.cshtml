                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administracion <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@Html.ActionLink(ProyectoBitacorasCientificas.Resources.Lang.RamasCientificas, "RamasCientificas", "Administracion")</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">@Html.ActionLink(ProyectoBitacorasCientificas.Resources.Lang.Proyectos, "Proyectos", "Administracion")</a></li>
